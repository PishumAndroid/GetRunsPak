<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_info"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@color/whilte" >

        <Button
            android:id="@+id/about_title_back"
            android:layout_width="30dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dip"
            android:background="@drawable/title_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:text="关于TaskKiller"
            android:textColor="@color/white"
            android:textSize="18sp" >
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="45dip"
        android:background="@color/gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="5dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:text="应用名：TaskKiller"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="5dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:text="版本号：version 1.2"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="40dip"
        android:background="@color/gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="5dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:text="主要功能有:"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:background="@color/white"
        android:gravity="top|clip_horizontal"
        android:text="1.实现进程的查看，包括进程总数，进程名，\n\tpid，uid，以及进程占有的内存，优先级等"
        android:textColor="#0057ed" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:background="@color/white"
        android:gravity="top|clip_horizontal"
        android:text="2.一键智能清理进程"
        android:textColor="#0057ed" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:background="@color/white"
        android:gravity="top|clip_horizontal"
        android:text="3.查看当前剩余内存"
        android:textColor="#0057ed" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:background="@color/white"
        android:gravity="top|clip_horizontal"
        android:text="4.查看某些系统信息"
        android:textColor="#0057ed" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:background="@color/white"
        android:gravity="top|clip_horizontal"
        android:text="5.桌面图标加速清理"
        android:textColor="#0057ed" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:background="@color/white"
        android:gravity="top|clip_horizontal"
        android:text="6.通知栏快捷清理"
        android:textColor="#0057ed" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="45dip"
        android:background="@color/gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="5dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:text="开发人员：pishum"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="5dip"
        android:background="@drawable/list_item_white_select"
        android:gravity="center_vertical"
        android:text="推送至好友"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

</LinearLayout>